<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@color/colorAccent"/>

    <TextView
        android:text="Vehicle Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="32dp"

        android:id="@+id/no_text_view1"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Parked Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_text_view1"
        android:layout_alignStart="@+id/no_text_view1"
        android:layout_marginTop="30dp"
        android:id="@+id/loc_text_view1"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/no_text_view1" />

    <TextView
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loc_text_view1"
        android:layout_alignStart="@+id/loc_text_view1"
        android:layout_marginTop="30dp"
        android:id="@+id/time_text_view1"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/loc_text_view1" />

    <TextView
        tools:text="DL1245"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/no_text_view1"
        android:layout_toStartOf="@+id/fab"
        android:layout_marginEnd="16dp"
        android:id="@+id/no_text_view2" />

    <TextView
        tools:text="Dilshad Gargen Metro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_above="@+id/time_text_view1"
        android:layout_alignStart="@+id/no_text_view2"
        android:id="@+id/loc_text_view2" />

    <TextView
        tools:text="8:00 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/time_text_view1"
        android:layout_alignStart="@+id/loc_text_view2"
        android:id="@+id/time_text_view2" />


</RelativeLayout>